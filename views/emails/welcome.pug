extends baseEmail

block content
    p Hi #{firstName},
    p Welcome to Link-King!
    p No bs and no spamming, this is one of very few emails we will send to you.
    table.darkmode-transparent(cellpadding='0' cellspacing='0' role='presentation')
        tr
            td(width='600' align='center' valign='middle')
                table.darkmode-transparent(cellpadding='0' cellspacing='0' role='presentation')
                    tr
                        td(align='center')
                            table.darkmode-transparent(cellpadding='0' cellspacing='0' role='presentation')
                                tr
                                    td(style='border-radius: 10px' bgcolor='#3b3b3b')
                                        a(href=`${url}` target='_blank' style='\
                                        font-size: 17px;\
                                        font-weight: bold;\
                                        text-decoration: none;\
                                        color: #fffff;\
                                        background-color: #3b3b3b;\
                                        border: 1px solid #6b6b6b;\
                                        border-radius: 10px;\
                                        padding: 12px 20px 12px 20px;\
                                        display: inline-block;\
                                        ') Get started!
    p Enjoy the console!
    p Jacob