extends baseEmail 

block content
    p Hi #{firstName},
    p Forgot your password? That's ok.
    p Copy the code below to reset your password securely.
    table.darkmode-transparent(cellpadding='0' cellspacing='0' role='presentation')
        tr
            td(width='600' align='center' valign='middle')
                table.darkmode-transparent(cellpadding='0' cellspacing='0' role='presentation')
                    tr
                        td(align='center')
                            table.darkmode-transparent(cellpadding='0' cellspacing='0' role='presentation')
                                tr
                                    td.codeholder(style='border-radius: 10px;\
                                    font-size: 17px;\
                                    font-weight: bold;\
                                    text-decoration: none;\
                                    color: #fffff;\
                                    background-color: #3b3b3b;\
                                    border: 1px solid #6b6b6b;\
                                    border-radius: 10px;\
                                    padding: 12px 20px 12px 20px;\
                                    display: inline-block' align='center')= url
    p If you didn't forget your password, please ignore this email!

