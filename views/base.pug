doctype html
html
    head
        meta(charset='utf-8')
        meta(name='viewport' content='width=device-width')
        link(rel='shortcut icon' type='image/png' href='/img/linkKing.png')
        link(rel='stylesheet' href='css/base.css')
        if(title)
            title Link-King | #{title}
        else 
            title Link-King
        block head
        include style/_header_style
        include style/_footer_style

    body 
        // HEADER
        include _header
        
        // CONTENT
        block content   
        
        // FOOTER
        include _footer

        // SCRIPTS
        script(src='https://cdnjs.cloudflare.com/ajax/libs/axios/1.6.2/axios.min.js')
        script(src='/js/bundle.js')