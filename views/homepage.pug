extends base

mixin aboutBlockL(heading, image, text)
    div.aboutBlockL
        div.aboutBlockTitle.fadeLeft 
            span= heading
        div
            img.aboutBlockIMG(src=`/img/screenShots/${image}.png`)
        div.aboutBlockText.fadeRight
            span= text 

mixin aboutBlockR(heading, image, text)
    div.aboutBlockR
        div.aboutBlockText.fadeLeft
            span= text 
        div
            img.aboutBlockIMG(src=`/img/screenShots/${image}.png`)
        div.aboutBlockTitle.fadeRight
            span= heading

block head
    style(type='text/css').
        .aboutBlockL,
        .aboutBlockR {
        margin: 3rem;
        display: flex;
        justify-content: center;
        height: 9rem;
        transform: skewX(-2deg) skewY(1deg);
        z-index: 1;
        }
        .aboutBlockR {
        transform: skewX(-2deg) skewY(-1deg)!important;
        }
        .aboutBlockTitle {
        flex: 0.3;
        font-size: 2rem;
        font-weight: bold;
        display: flex;
        justify-content: center;
        align-items: center;
        }

        .fadeLeft {
        padding: 0 0.5rem 0 0;
        background: linear-gradient(to right, #1b1b1b, #000000);
        text-align: right;
        justify-content: right;
        }

        .fadeRight {
        padding: 0 0 0 0.5rem;
        background: linear-gradient(to left, #1b1b1b, #000000);
        text-align: left;
        justify-content: left;
        }

        .aboutBlockIMG {
        border: 0.2rem solid hsl(0, 0%, 0%);
        height: 13.25rem;
        width: 13.25rem;
        display: flex;
        justify-content: center;
        align-items: center;
        transform: translate(0, -2rem);
        }

        .aboutBlockText {
        flex: 1;
        font-size: 1.2em;
        padding: 1em;
        display: flex;
        justify-content: center;
        align-items: center;
        }

        @media screen and (max-width: 87rem) {
            .aboutBlockL,
        .aboutBlockR {
        margin: 1.5rem!important;
        height: 4.5rem!important;
        padding: 1rem 0!important;
        }
        .aboutBlockIMG {
        height: 6.5rem!important;
        width: 6.5rem!important;
        display: flex!important;
        transform: translate(0, -1rem)!important;
        }
        .aboutBlockTitle {
        flex: 0.15!important;
        font-size: 1rem!important;
        }
        .aboutBlockText {
        padding: 0.2rem!important;
        font-size: 1rem!important;
        }
        }
        @media screen and (max-width: 37.5rem) {
        .aboutBlockText {
        font-size: 0.5rem!important;
        }
        }


