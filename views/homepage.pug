extends base

mixin aboutBlockL(heading, image, text)
    div.aboutBlockL
        div.aboutBlockTitle.fadeLeft 
            span= heading
        div.aboutBlockIMG
            img(src=`/img/screenShots/${image}.png`)
        div.aboutBlockText.fadeRight
            span= text 

mixin aboutBlockR(heading, image, text)
    div.aboutBlockR
        div.aboutBlockText.fadeLeft
            span= text 
        div.aboutBlockIMG
            img(src=`/img/screenShots/${image}.png`)
        div.aboutBlockTitle.fadeRight
            span= heading
            
block head
    style(type='text/css').
        .aboutBlockL {
        margin-top: 3em;
        display: flex;
        justify-content: center;
        height: 150px;
        transform: skewX(-2deg) skewY(1deg);
        z-index: 1;
        }

        .aboutBlockR {
        margin-top: 3em;
        display: flex;
        justify-content: center;
        height: 150px;
        transform: skewX(-2deg) skewY(-1deg);
        z-index: 1;
        }

        .aboutBlockTitle {
        flex: 0.3;
        font-size: 2em;
        font-weight: bold;
        display: flex;
        justify-content: center;
        align-items: center;
        }

        .fadeLeft {
        background: linear-gradient(to right, #1b1b1b, #000000);
        text-align: right;
        padding: 0 10px 0 0;
        justify-content: right;
        }

        .fadeRight {
        background: linear-gradient(to left, #1b1b1b, #000000);
        text-align: left;
        padding: 0 0 0 10px;
        justify-content: left;
        }

        .aboutBlockIMG {
        border: 3px solid hsl(0, 0%, 0%);
        height: 200px;
        width: 200px;
        /* border-radius: 15px; */
        display: flex;
        justify-content: center;
        align-items: center;
        transform: translate(0, -2em);
        }

        .aboutBlockText {
        flex: 1;
        font-size: 1.2em;
        padding: 1em;
        display: flex;
        justify-content: center;
        align-items: center;
        }

        .main__home {
        position: relative;
        -webkit-box-flex: 1;
        -ms-flex: 1;
        flex: 1;
        display: flex;
        flex-direction: column;
        justify-content: top;
        align-items: center;
        height: 100%;
        }

        .bigTitle {
        z-index: 50;
        margin-top: 10px;
        /* margin-bottom: 10px; */
        font-size: 5em;
        display: inline-block;
        display: flex;
        flex-direction: row;
        position: relative;
        }

        .upcomingFeatures {
        position: relative;
        margin-top: 3em;
        display: flex;
        justify-content: top;
        height: 150px;
        width: 90%;
        z-index: 1;
        border: 2px solid hsl(0, 0%, 100%);
        border-radius: 15px;
        height: 150px;
        align-items: left;
        padding: 20px 20px 20px 20px;
        }

        .featuresTitle {
        font-size: 1.5em;
        }

